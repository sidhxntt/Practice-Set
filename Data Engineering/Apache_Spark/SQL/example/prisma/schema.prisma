generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int      @id @default(autoincrement())
 // Required fields
  email    String @unique
  password String
  role     String @default("admin")

  // Optional fields
  first_name String?
  last_name  String?
  full_name  String?
  username   String? @unique
  phone      String? @unique
  website    String? @unique

  // Relations
  address Address?
  albums  Album[]
  posts   Post[]
  todos   Todos[]
}

model Address {
  id      Int    @id @default(autoincrement())
  street  String
  suite   String
  city    String
  zipcode String
  user    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique
}

model Album {
  id     Int     @id @default(autoincrement())
  userId Int
  title  String
  User   User    @relation(fields: [userId], references: [id])
  Image  Image[]
}

model Image {
  id           Int    @id @default(autoincrement())
  albumId      Int
  title        String
  url          String
  thumbnailUrl String
  Album        Album  @relation(fields: [albumId], references: [id])
}

model Post {
  id     Int    @id @default(autoincrement())
  userId Int
  title  String
  body   String
  User   User   @relation(fields: [userId], references: [id])
}

model Todos {
  id        Int     @id @default(autoincrement())
  userId    Int
  title     String
  completed Boolean
  User      User    @relation(fields: [userId], references: [id])
}
