{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES6", "DOM"],
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}